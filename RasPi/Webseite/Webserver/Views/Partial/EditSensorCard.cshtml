@model Webserver.Models.Sensor.SensorInfo

<div class="card @( Model.Active ? "border-primary" : "border-danger" )">
    <form asp-action="UpdateSensor">
        <input asp-for="Sensor.ID" type="hidden" />
        <div class="card-header text-center">
            <input asp-for="Sensor.Type" class="text-center" />
            <span asp-validation-for="Sensor.Type" class="text-danger"></span>
        </div>
        <div class="card-body">
            <div class="text-center">
                <input asp-for="Sensor.DisplayName" class="text-center font-weight-bold" />
                <span asp-validation-for="Sensor.DisplayName" class="text-danger"></span>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="row">
                        <b class="col-4 px-0">
                            Aktiv:
                        </b>
                        <a class="col-8 px-0">
                            @(Model.Active ? "Ja" : "Nein")
                        </a>
                    </span>
                </li>
                <li class="list-group-item">
                    <span class="row">
                        <b class="col-4 px-0">
                            Letzte <a class="text-nowrap">Aktivität:</a>
                        </b>
                        <a class="col-8 px-0">
                            @Html.DisplayFor(x => Model.LastActivityTimestamp)
                            <br />
                            @Html.DisplayFor(x => Model.LastActivityValue)
                        </a>
                    </span>
                </li>
            </ul>
        </div>
        <div class="btn-group-vertical w-100">
            <input type="submit" value="Speichern" class="btn btn-primary w-100" />
            <a asp-action="Index" asp-controller="Sensor" class="btn btn-secondary w-100">Abbrechen</a>
            <a asp-action="DeleteSensor" asp-controller="Sensor" asp-route-id="@Model.Sensor.ID" class="btn btn-danger w-100">Entfernen</a>
        </div>
    </form>
</div>