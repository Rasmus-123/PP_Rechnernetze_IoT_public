@model Webserver.Models.Settings.NetworkSettings

<div class="row">
    <div class="col-6">
        <form asp-action="ChangeWiFiNetwork" asp-controller="Settings">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="SSID" class="control-label"></label>
                <input asp-for="SSID" class="form-control" />
                <span asp-validation-for="SSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
