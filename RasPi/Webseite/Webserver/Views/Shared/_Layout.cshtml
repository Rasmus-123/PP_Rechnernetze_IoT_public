@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostEnv
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="robots" content="noindex" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aktivitätsüberwachung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons-1.5.0/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Aktivitätsüberwachung</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sensor" asp-action="Index">Übersicht</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sensor" asp-action="Triangulation">Triangulation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Settings" asp-action="Index">Einstellungen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="@(ViewData["NoContainer"] as bool? == true ? "" : "container")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @if (IsSectionDefined("footer"))    // If Footer-Section exists render that
        {
            @RenderSection("footer", false)
        }
        else                                // Else Render Default
        {
            <div class="container">
                &copy; 2021 - Aktivitätsüberwachung - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <environment exclude="Production">
                    - @hostEnv.EnvironmentName - @ThisAssembly.BuildMode
                </environment>
                <environment include="Development">
                    <span class="float-right">@ThisAssembly.Git.Commit@(ThisAssembly.Git.IsDirty ? "*" : "")@@@ThisAssembly.Git.Branch</span>
                </environment>
            </div>
        }
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
